{% block header_line %}
    {{ include('v2/blocks/include/header.html.twig', {'brands' : brands, 'topMenu': topMenu, 'leftMenu': leftMenu}) }}
{% endblock %}
{% block header_banner %}
    {{ include('v2/blocks/section/hero.html.twig',{ h1 : block('h1') ?? page.h1, 'customH1': page.h1 }) }}
{% endblock %}
{% block breadcrumbs %}
    <section id="breadcrumbs" style="margin-top: 100px;">
        <div class="breadcrumbs_wrapper">
                <span class="navigation_item">
                    <a href="/">Ремонт Mercedes</a>
                    <span>&#8646;</span>
                </span>

            <span class="navigation_item">
                    <a href="#">{{ page.h1 }}</a>
                </span>


        </div>
    </section>
{% endblock %}

{% block body %}
    <section class="videoblog">
        <div class="video-line__wrapper container">
            <div class="h1__inner-page">
                <div class="uk-section uk-container">
                    <h1>Наши работы</h1>
                </div>
            </div>
            <div class="row">
                {% for work in pagination %}
                    <div class="col-md-4 col-sm-6 col-12 video-line__elem">
                        <a href="/{{ work.url }}/">
                            {% if work.blogImg is not empty and work.blogImg is not null %}
                                <img class="blog__image" src="/img/nashiraboty_small/{{ work.blogImg }}" alt="{{ work.name }}">
                            {% elseif work.previewImg is defined and  work.previewImg is not empty %}
                                <img class="blog__image" src={{ work.previewImg }} alt="{{ work.name }}">
                            {% else %}

                                <img class="blog__image" src="/img/nashiraboty_small/no-foto.png" alt="{{ work.name }}">
                            {% endif %}
                        </a>
                        <div class="video-line__elem_wrapper">
                            <div class="video-line__elem_name">
                            <a href="/{{ work.url }}/">{{ work.name }}</a>
                            </div>
                            <div class="video-line__elem_shortText">{% if work.shortText is not empty %}{{ work.shortText|raw }}...{% endif %}</div>
                            <div class="video-line__elem_readMore">
                            <a href="/{{ work.url }}/" class="nashiraboty__item_more">Читать больше ></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
            <div class="navigation container">
                {{ knp_pagination_render(pagination) }}
            </div>

        </div>
    </section>




