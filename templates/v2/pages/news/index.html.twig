{% extends 'v2/base.html.twig' %}

{% block body %}
    {% embed 'v2/embed/content.html.twig' %}
        {% block content %}
            <h2>Подборка свежих и актуальных новостей</h2>
            {% for item in items %}
                <div class="row">
                    <div>
                        <span>{{ item.date|date("d.m.Y") }}</span>
                        <a href="{{ path('news_item',{'id': item.id}) }}">{{ item.name }}</a>
                    </div>
                    <div>{{ item.shortText }}</div>
                </div>
                <hr/>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
