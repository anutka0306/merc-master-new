{% if text is not null and text is not empty %}
  <div class="container-fluid">
  <div class="row text-top__wrapper">
    <div class="{% if textImg is not null %}col-md-6 {% else %}d-none {% endif %} text-top__image"
            {% if textImg is not null %}
              style="background: url(/images/page-images/{{ textImg }});"
            {% endif %}
    >
    </div>
    <div class="{% if textImg is not null %}col-md-6 {% else %}col-md-12 {% endif %} col-12">
      <div class="text-top__text"> {{ text|raw }}</div>

    </div>
  </div>
</div>
{% endif %}