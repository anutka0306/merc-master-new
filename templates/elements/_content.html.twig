{% if page.text is not empty %}
<section class="content__text">
    <div class="section__heading">
        <div class="section__heading-text">
            {% if page.text is not empty %}
            <h2 class="section__h2">{{ page.h1 }}</h2>
            {% endif %}
            {% if page.text is not empty %}

                {% if (textBlocksOrder is defined and textBlocksOrder is not empty) and (textParts is defined) %}
                    {# вставляем блоки в текст #}
                    {% for key, textPart in textParts %}
                        {{ textPart|raw }}
                            {% if textBlocksOrder[key] is defined  %}
                                {% if textBlocksOrder[key] == '[nashi_raboti_block]' %}
                                    {{ include('elements/nashi_raboty_4_items.html.twig') }}
                                {% elseif textBlocksOrder[key] == '[price_zapros_form]' %}
                                    {{ include('elements/ask_price_form.html.twig') }}
                                {% elseif textBlocksOrder[key] == '[video_block]' %}
                                    {{ include('elements/video_line.html.twig') }}
                                {% elseif textBlocksOrder[key] == '[zapror_detali]' %}
                                      {{ include('elements/ask_detail_form.html.twig') }}
                                {% else %}
                                {% endif %}

                            {% endif %}
                    {% endfor %}
                {% else %}
                        {{ page.text|raw }}
                {% endif %}

            {% endif %}
        </div><br><br>

    </div>
</section>
{% endif %}